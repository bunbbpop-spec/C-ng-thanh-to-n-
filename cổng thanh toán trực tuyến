  <script>
    // Hiển thị năm hiện tại
    document.getElementById('year').textContent = new Date().getFullYear();

    // Xử lý form (mô phỏng). Thay phần này bằng gọi API thực tế (fetch/axios) tới backend của trường:
    document.getElementById('paymentForm').addEventListener('submit', function(e){
      e.preventDefault();
      const msgEl = document.getElementById('formMsg');
      msgEl.style.color = 'var(--muted)';
      msgEl.textContent = 'Đang khởi tạo giao dịch...';

      const payload = {
        studentId: document.getElementById('studentId').value.trim(),
        fullName: document.getElementById('fullName').value.trim(),
        faculty: document.getElementById('faculty').value.trim(),
        amount: Number(document.getElementById('amount').value),
        method: document.getElementById('method').value
      };

      // VALIDATION cơ bản
      if(!payload.studentId || !payload.fullName || !payload.amount || !payload.method){
        msgEl.style.color = 'crimson';
        msgEl.textContent = 'Vui lòng điền đầy đủ thông tin và chọn phương thức.';
        return;
      }

      // --------------- PHASE: tích hợp thực tế ---------------
      // Thay đoạn setTimeout bằng request tới endpoint backend, ví dụ:
      // fetch('/api/payments/create', {method:'POST',headers:{'Content-Type':'application/json'}, body: JSON.stringify(payload)})
      //  .then(r => r.json()).then(data => { redirect to payment gateway or show success } )
      //  .catch(err => { show error } );

      // Mô phỏng thành công:
      setTimeout(() => {
        msgEl.style.color = '#0b7a3d';
        msgEl.textContent = 'Giao dịch khởi tạo thành công. Bạn sẽ được chuyển tới cổng thanh toán...';

        // giả lập redirect (trong thực tế redirect tới trang của ngân hàng/ví)
        setTimeout(() => {
          alert('Mô phỏng: chuyển tới cổng thanh toán (thực tế hãy redirect tới gateway).');
          msgEl.textContent = 'Sau khi thanh toán thành công, biên lai sẽ được gửi tới email/SMS.';
        }, 800);
      }, 1200);
    });
  </script>
